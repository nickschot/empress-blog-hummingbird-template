<MobileMenuWrapper
  @openDetectionWidth={{-1}}
  @embed={{not (media "isMobile")}}
as |mmw|>
  <mmw.MobileMenu
    @mode={{if (media "isMobile") "ios" "squeeze-reveal"}}
    @maskEnabled={{media "isMobile"}}
    @shadowEnabled={{media "isMobile"}}
  as |mm|>
    <Navigation @linkToComponent={{mm.LinkTo}}/>

    <footer>
      &copy; {{date format="YYYY"}} {{this.blog.title}}
      <br>
      Published with <a href="https://github.com/empress/empress-blog" target="_blank" rel="noopener noreferrer">empress-blog</a>
    </footer>
  </mmw.MobileMenu>

  <mmw.Content>
    <header class="site-head">
      <div class="site-head-container">
        <nav id="swup" class="site-head-left">
          <mmw.Toggle>Menu</mmw.Toggle>
        </nav>
        <div class="site-head-center">
          {{#if @site.logo}}
            <a class="site-head-logo" href="{{@site.url}}"><img src="{{@site.logo}}" alt="{{@site.title}}"/></a>
          {{else}}
            <a class="site-head-logo" href="{{@site.url}}">{{@site.title}}</a>
          {{/if}}
        </div>
        <div class="site-head-right">
          <div class="social-links">
            {{#if @site.facebook}}
              <a href="{{facebook_url @site.facebook}}" title="Facebook" target="_blank" rel="noopener">Facebook</a>
            {{/if}}
            {{#if @site.twitter}}
              <a href="{{twitter_url @site.twitter}}" title="Twitter" target="_blank" rel="noopener">Twitter</a>
            {{/if}}
            {{#if this.blog.host}}
              <a href={{concat "https://feedly.com/i/subscription/feed/" (encode blog.host) '/rss.xml'}} title="RSS" target="_blank" rel="noopener">RSS</a>
            {{/if}}
          </div>
        </div>
      </div>
    </header>

    <main id="site-main" class="site-main">
      {{!-- All the main content gets inserted here, index.hbs, post.hbs, etc --}}
      {{outlet}}
    </main>

    {{!-- The footer at the very bottom of the screen --}}
    <footer class="site-foot">
      &copy; {{date format="YYYY"}} <LinkTo @route="index">{{this.blog.title}}</LinkTo> &mdash; Published with <a href="https://github.com/empress/empress-blog" target="_blank" rel="noopener">empress-blog</a>
    </footer>
  </mmw.Content>
</MobileMenuWrapper>